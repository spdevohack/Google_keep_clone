<script type="text/javascript">
  var pinNote = document.querySelector(".pin");
  pinNote.setAttribute('value', '0')
  pinvalue = parseInt(pinNote.value)

  pinNote.addEventListener("click", pinSet)
  function pinSet(){
    if (pinNote.checked == true) {
      pinNote.setAttribute('value', '1')
      pinvalue = parseInt(pinNote.value)

    }else {
      pinNote.setAttribute('value', '0')
      pinvalue = parseInt(pinNote.value)

    }
