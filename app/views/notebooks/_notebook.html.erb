<div id="main-div" class="card" style="width: 18rem;">
    <%= form_with  class:"my-form", model: @notebook, url: @action == 'edit' ? notebook_path : notebooks_path, method: @action == 'edit' ? :PATCH : :POST do |form| %>
      <%= form.text_field :id, type: "hidden", value: @notebook.id, class:"notes_id input" %>
      <%= form.text_field :title, placeholder: "Title", id: "note_title", class:'form-control input' %><br>
      <%= form.text_area :description, placeholder: "Take a Note...", id:"note_description", class:'form-control input'%><br>
      <%= form.check_box :pinned , class:'input pin' %><br>
      <%= form.file_field :image, class:'input' %><br>
      <input type="button" name="Add Reminder", value="Add Reminder", id= "reminder-btn" >

      <div class="show-reminder">
        <%= form.date_field :date, min: Date.today, class:"input"  %>
        <%= form.time_field :time, class:"input"  %>
      </div>

<!-- 
      <input id="submitbtn" type="submit" value="Save" name= 'Add' ></input>   -->
    <% end %>   
</div>

